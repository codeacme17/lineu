{
  "name": "vscode-knowledge-cards",
  "displayName": "Knowledge Cards",
  "version": "0.1.0",
  "description": "Generate knowledge cards from AI conversations via MCP",
  "publisher": "lineu",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -w -p tsconfig.json",
    "clean": "rm -rf dist",
    "vscode:prepublish": "pnpm run build",
    "package": "vsce package --no-dependencies"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cardsView",
          "title": "Knowledge Cards",
          "icon": "resources/cards.svg"
        }
      ]
    },
    "views": {
      "cardsView": [
        {
          "id": "cards.sidebar",
          "name": "Cards",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "cards.captureContextAndGenerate",
        "title": "Cards: Capture Context and Generate"
      },
      {
        "command": "cards.openCollection",
        "title": "Cards: Open Collection"
      },
      {
        "command": "cards.processPendingContexts",
        "title": "Cards: Process Pending AI Contexts"
      }
    ],
    "configuration": {
      "title": "Knowledge Cards",
      "properties": {
        "cards.diffMode": {
          "type": "string",
          "enum": [
            "unstaged",
            "staged",
            "both"
          ],
          "default": "unstaged",
          "description": "Git diff mode used for card generation."
        }
      }
    }
  },
  "dependencies": {
    "@lineu/lib": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.9.2"
  },
  "license": "MIT"
}
