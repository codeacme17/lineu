{
  "name": "vscode-knowledge-cards",
  "displayName": "Knowledge Cards",
  "version": "0.1.0",
  "description": "Generate knowledge cards from AI conversations via MCP",
  "publisher": "lineu",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "build": "node esbuild.js",
    "build:production": "node esbuild.js --production",
    "watch": "tsc -w -p tsconfig.json",
    "clean": "rm -rf dist",
    "vscode:prepublish": "pnpm run build:production",
    "package": "vsce package --no-dependencies"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:cards.captureContextAndGenerate",
    "onCommand:cards.openCollection",
    "onCommand:cards.configureOpenRouterApiKey",
    "onUri"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cardsView",
          "title": "Knowledge Cards",
          "icon": "resources/cards.svg"
        }
      ]
    },
    "views": {
      "cardsView": [
        {
          "id": "cards.sidebar",
          "name": "Cards",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "cards.captureContextAndGenerate",
        "title": "Cards: Capture Context and Generate"
      },
      {
        "command": "cards.openCollection",
        "title": "Cards: Open Collection"
      },
      {
        "command": "cards.processPendingContexts",
        "title": "Cards: Process Pending AI Contexts"
      }
    ],
    "configuration": {
      "title": "Knowledge Cards",
      "properties": {
        "cards.diffMode": {
          "type": "string",
          "enum": [
            "unstaged",
            "staged",
            "both"
          ],
          "default": "unstaged",
          "description": "Git diff mode used for card generation."
        }
      }
    }
  },
  "dependencies": {
    "@lineu/lib": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.18.2"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.2"
  },
  "license": "MIT"
}
