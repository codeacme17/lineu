{
  "name": "lineu",
  "displayName": "Lineu",
  "version": "0.1.0",
  "description": "Turn questions into sparks â€” capture knowledge from AI conversations",
  "publisher": "lineu",
  "icon": "resources/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/lineu/lineu"
  },
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "build": "node esbuild.js",
    "build:production": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "clean": "rm -rf dist webview-ui/dist",
    "dev:webview": "cd webview-ui && pnpm run dev",
    "vscode:prepublish": "pnpm run build:production",
    "package": "vsce package --no-dependencies"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:cards.captureContextAndGenerate",
    "onCommand:cards.openCollection",
    "onCommand:cards.copyMcpServerPath",
    "onCommand:cards.copyMcpConfig",
    "onCommand:cards.createMcpConfig",
    "onCommand:cards.copySparkCommands",
    "onCommand:cards.showOnboarding",
    "onUri"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cardsView",
          "title": "Lineu",
          "icon": "resources/lineu.svg"
        }
      ]
    },
    "views": {
      "cardsView": [
        {
          "id": "cards.sidebar",
          "name": "Lineu",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "cards.captureContextAndGenerate",
        "title": "Lineu: Capture Context and Generate"
      },
      {
        "command": "cards.openCollection",
        "title": "Lineu: Open Collection"
      },
      {
        "command": "cards.copyMcpServerPath",
        "title": "Lineu: Copy MCP Server Path"
      },
      {
        "command": "cards.copyMcpConfig",
        "title": "Lineu: Copy MCP Config Snippet"
      },
      {
        "command": "cards.createMcpConfig",
        "title": "Lineu: Create MCP Config File"
      },
      {
        "command": "cards.copySparkCommands",
        "title": "Lineu: Copy Spark Commands to Project"
      },
      {
        "command": "cards.showOnboarding",
        "title": "Lineu: Show Onboarding"
      }
    ],
    "configuration": {
      "title": "Lineu",
      "properties": {
        "cards.diffMode": {
          "type": "string",
          "enum": [
            "unstaged",
            "staged",
            "both"
          ],
          "default": "unstaged",
          "description": "Git diff mode used for card generation."
        }
      }
    }
  },
  "dependencies": {
    "@lineu/lib": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.18.2"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.2"
  },
  "license": "MIT",
  "files": [
    "dist",
    "resources",
    "mcp-server/dist",
    "commands",
    "webview-ui/dist",
    "README.md"
  ]
}
